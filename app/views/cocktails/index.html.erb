<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 200, width: 200, crop: :fill unless cocktail.photo.blank? %>')">
      <%=link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>
</div>

